{
  "name": "inherbisveritas",
  "version": "2.2.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "migrate:log": "node scripts/migration-tracer.js log",
    "migrate:create": "node scripts/migration-tracer.js create",
    "migrate:summary": "node scripts/migration-tracer.js summary",
    "supabase:status": "npx supabase status",
    "supabase:types": "npx supabase gen types typescript --project-id mntndpelpvcskirnyqvx > src/types/database.ts",
    "test": "jest",
    "test:unit": "jest --config jest.config.js",
    "test:unit:watch": "jest --config jest.config.js --watch",
    "test:mvp": "jest --config jest.config.mvp.js",
    "test:mvp:watch": "jest --config jest.config.mvp.js --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "npm run test:coverage:check && npm run test:e2e",
    "test:tdd": "jest --config jest.config.js --watch --verbose",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage:check": "jest --config jest.config.js --coverage --passWithNoTests",
    "test:i18n:health": "jest tests/integration/i18n/routing-regression-simple.test.ts --verbose --passWithNoTests",
    "test:routes:quick": "playwright test tests/e2e/i18n-routing-critical.spec.ts --grep='Navigation de Base'",
    "test:health": "npm run test:i18n:health && npm run test:routes:quick",
    "test:i18n:full": "jest tests/integration/i18n/ tests/integration/middleware/ tests/integration/prevention/ --verbose",
    "test:e2e:i18n": "playwright test tests/e2e/i18n-routing-critical.spec.ts",
    "test:stability": "npm run test:i18n:full && npm run test:e2e:i18n",
    "test:regression": "jest --testPathPattern='routing-regression|404-generalized-prevention' --bail",
    "test:watch:i18n": "jest tests/integration/i18n/ --watch --verbose",
    "lint:file-length": "node -e \"const fs=require('fs');const path=require('path');const glob=require('glob');const files=glob.sync('src/**/*.{ts,tsx}');files.forEach(f=>{const lines=fs.readFileSync(f,'utf8').split('\\n').length;const limits={components:150,features:200,lib:300};const type=f.includes('components')?'components':f.includes('features')?'features':f.includes('lib')?'lib':'other';const limit=limits[type];if(limit&&lines>limit)console.log(`❌ ${type} ${f}: ${lines} lignes (max ${limit})`);if(f.includes('app/')&&f.includes('page')&&lines>100)console.log(`❌ Page ${f}: ${lines} lignes (max 100)`)});\"",
    "pre-commit": "npm run lint:file-length && npm run lint && npm run typecheck",
    "analyze": "ANALYZE=true npm run build",
    "analyze:bundle": "npm run build && npx @next/bundle-analyzer",
    "build:performance": "npm run analyze && node scripts/performance-check.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
